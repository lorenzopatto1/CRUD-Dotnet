@model ContatoModel
@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">
    <p>Cadastrar contato</p>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" id="nome" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(error => error.Name)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Coloque seu email">
        @Html.ValidationMessageFor(error => error.Email)
    </div>
    <div class="form-group">
        <label for="celular">Telefone</label>
        <input type="number" asp-for="Celular" class="form-control" id="celular" placeholder="Coloque seu telefone">
        @Html.ValidationMessageFor(error => error.Celular)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
